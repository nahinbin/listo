{
  "manifest_version": 3,
  "name": "listo",
  "version": "1.0.0",
  "description": "A sophisticated list manager with dark/light themes, customizable list styles, emoji icons, and auto-saving. Perfect for quick notes, tasks, and organized thinking.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "author": "nahin",
  "homepage_url": "https://nahin.space",
  "minimum_chrome_version": "88"
} 